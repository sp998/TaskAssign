
@model List<TaskAssign.Model.AssignTaskDisplay> 
@{
    ViewData["Title"] = "Assigned Taks";
}

@if (!(Model.Count == 0))
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Task Name
                </th>
                <th>
                    Description
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model[0].Completed)
                </th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaskName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaskDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Completed)
                    </td>

                    <td>
                        <a asp-action="StartTask" class="btn btn-primary" asp-route-Id="@item.AssignId">Enter</a>
                    </td>

                </tr>
            }
        </tbody>
    </table> }
else
{
    <h1>You don't have any Assigned Tasks yet.</h1>

}

